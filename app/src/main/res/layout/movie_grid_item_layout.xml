<?xml version="1.0" encoding="utf-8"?>
<com.wtuadn.pressable.PressableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:press="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    press:pressed_color="@color/black_pressed_color">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40.5dp"
        android:layout_below="@+id/image_view"
        android:background="@color/white"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/main_text_color"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10.6dp"
        android:layout_marginRight="15.6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grid_multi_unchecked"/>

</com.wtuadn.pressable.PressableRelativeLayout>